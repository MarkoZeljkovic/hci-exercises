<Window
    x:Class="_03_DataBinding_ObservableCollection.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_03_DataBinding_ObservableCollection"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  Book Details  -->
        <StackPanel Grid.Row="0">
            <TextBlock FontWeight="Bold" Text="Title:" />
            <TextBlock
                x:Name="txtTitle"
                FontSize="16"
                Text="{Binding Title}" />
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock FontWeight="Bold" Text="Author:" />
            <TextBlock
                x:Name="txtAuthor"
                FontSize="16"
                Text="{Binding Author}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock FontWeight="Bold" Text="Read Status:" />
            <TextBlock x:Name="txtStatus" FontSize="16" />
        </StackPanel>
        <Button
            Grid.Row="3"
            Width="120"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            Click="MarkAsRead_Click"
            Content="Mark as Read" />
    </Grid>
</Window>
